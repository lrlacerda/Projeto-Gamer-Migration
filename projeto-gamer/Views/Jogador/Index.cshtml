@model Jogador
@{
    ViewData["Title"] = "Jogador";
}

<link rel="stylesheet" href="~/css/jogadores.css">

<!-- MAIN -->
<main>

    <section class="container-grid cadastro-equipes">
        @if (ViewBag.UserName == null)
        {
            <a asp-area="" asp-controller="Login" asp-action="Index">
                Login
            </a>
        }
        else
        {
            <form class="frm-cad-equipe" method="post" action='@Url.Action("Cadastrar")' enctype="multipart/form-data">
                <div class="cadequipe-titulo">
                    <h1>Cadastro de Jogadores</h1>
                    <hr>
                </div>

                <input class="campo-entrada" type="number" id="id-equipe" placeholder="Digite o Id da sua equipe:">
                <input class="campo-entrada" type="text" id="nome-equipe" placeholder="Digite o nome da sua equipe:">

                <select class="campo-entrada" name="IdEquipe" id="IdEquipe">

                    <option value="" class="selecao-equipes"> Selecione uma opção: </option>

                    @foreach (Equipe equipe in ViewBag.Equipe)
                    {
                        <option value="@equipe.IdEquipe">@equipe.Nome</option>
                    }
                </select>

                <input class="campo-entrada" type="text" id="nome-jogador" placeholder="Digite o nome do Jogador:">
                <input class="campo-entrada" type="email" id="email-jogador" placeholder="Digite o Email do Jogador:">
                <input class="campo-entrada" type="password" id="senha" placeholder="Digite a Senha:">
                <button type="submit">Cadastrar</button>
            </form>

            <!-- TABELA CADASTRO DE Jogadores -->

            <table class="table table-striped table-responsive">
                <thead>
                    <th>Id</th>
                    <th>Nome</th>
                    <th>Email</th>
                    <th>Equipe</th>
                    <th>Ações</th>
                </thead>

                <tbody>
                    @foreach (Jogador jogador in ViewBag.jogador)
                    {
                        <tr>
                            <td>@jogador.IdJogador</td>
                            <td>@jogador.Nome</td>
                            <td>@jogador.Email</td>
                            <td>
                                <img src="/img/Equipes/@jogador.Equipe.Imagem" alt="Imagem da Equipe @jogador.Equipe.Nome"
                                    width="50px">
                            </td>

                            <td>
                                <a asp-area="" asp-controller="Jogador" asp-action="Excluir"
                                    asp-route-id="@jogador.IdJogador"><img class="yellow-trash" src="~/assets/trash.png" alt=""></a>
                            </td>
                            <td>
                                <a asp-area="" asp-controller="Jogador" asp-action="Editar"
                                    asp-route-id="@jogador.IdJogador"><img src="~/assets/edit.png" alt="" width="20"></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }

    </section>
</main>








